<Window x:Class="StudentBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="260" Width="350"
        Loaded="Window_Loaded">
    <Grid>
        <WrapPanel Background="Wheat">
            <Label FontSize="0.5cm" Content="{Binding ID}" Margin="40 5 60 0"/>
            <Label FontSize="0.5cm" Content="{Binding Name}" Margin="40 5 0 0"/>
            <Label FontSize="0.5cm" Content="{Binding Address}" Margin="40 5 0 0"/>
            <Label FontSize="0.5cm" Content="{Binding Email}" Margin="40 5 0 0"/>
            <Label FontSize="0.5cm" Content="{Binding Phone}" Margin="40 5 0 0"/>
        </WrapPanel>
    </Grid>
</Window>

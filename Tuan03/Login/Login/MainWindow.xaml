<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <WrapPanel Margin="0" Orientation="Vertical">
            <Image Source="./image/racoon.jpg" Height="110" Width="118" HorizontalAlignment="Center"/>
            <Label FontSize="0.4 cm" Target="{Binding ElementName=Username}" Margin="50 0 30 0" HorizontalContentAlignment="Center" Width="120" Content="_Username"/>
            <TextBox x:Name="Username" Height="25" Width="300" Margin="50 0 30 0"/>
            <Label FontSize="0.4 cm" Target="{Binding ElementName=Password}" Margin="50 0 30 0" HorizontalContentAlignment="Center" Width="120" Content="_Password"/>
            <PasswordBox x:Name="Password" Height="25" Width="300" Margin="50 0 30 20"/>
            <Button Width="60" Height="20" FontSize="0.3cm" Margin="20 0 0 0" Click="Button_Click">Login</Button>
        </WrapPanel>
    </Grid>
</Window>
